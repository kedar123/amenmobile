<!DOCTYPE html>
<html>
<head>
  <title>Amon Mobile</title>
  <%= stylesheet_link_tag :all %>
  <%= csrf_meta_tag %>

  <script type="text/javascript" src="http://connect.facebook.net/en_US/all.js"></script>
  <%=javascript_include_tag 'application.js'%>
</head>

<body>

<%if current_user%>
<div style="padding-left:950px;float:left;">
  Welcome <b><%=current_user.login%></b>  <a href="/logout"> Logout</a>
</div>
  <div id="fb-root"></div>
<div style="padding-left:1150px;">
  <a href="#" onclick="make_facebook_login();">
    <img src="/images/fb_login.gif">
    </img>
  </a>
</div>

<%else%>
<%if params[:controller] != "sessions"%>
<div style="padding-left:1050px;float:left;">
    <a href="/login">Login</a>
</div>
<%end%>
    <div id="fb-root"></div>
<div style="padding-left:1150px;">
  <a href="#" onclick="make_facebook_login();">
    <img src="/images/fb_login.gif">
    </img>
  </a>
</div>

<%end%>
<div id="flash" style="clear:both">
  <%=flash[:notice]%>
</div>
<%if current_user%>
 <div style="padding-left:500px;">
      <p style="float:left">   
          <%=link_to "My Friend",:controller=>"friendships",:action=>"get_all_friend"%>
      </p>
      <p style="float:left;padding-left:50px;">
          <%=link_to "Invitation Pending",:controller=>"friendships",:action=>"pending_invitation"%>
      </p>
      <p style="float:left;padding-left:50px;">
        <%=link_to "Send Invitation",:controller=>"friend_requests",:action=>"send_friend_request"%>
      </p>
      <p style="float:left;padding-left:50px;">
        <%=link_to "My Profile",:controller=>"users",:action=>"my_profile"%>
      </p>
      <p style="float:left;padding-left:50px;">
        <%#=link_to "Home",:controller=>"users",:action=>"user_action"%>
        <a href="/">Home</a>
      </p>


  </div>
<%end%>

<%= yield %>
</body>
</html>

